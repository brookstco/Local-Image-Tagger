<UserControl x:Class="LocalImageTagger.Views.Thumbnail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LocalImageTagger.Views"
             xmlns:prop="clr-namespace:LocalImageTagger.Properties" 
             mc:Ignorable="d"
             Height="{Binding Source={x:Static prop:Settings.Default}, Path=ThumbnailHeight}" 
             Width="{Binding Source={x:Static prop:Settings.Default}, Path=ThumbnailWidth}">
    <Border>
        <Image Margin="3"/>
    </Border>
</UserControl>
