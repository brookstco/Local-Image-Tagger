<Window x:Class="LocalImageTagger.Views.NewFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LocalImageTagger.Views"
        mc:Ignorable="d"
        Title="NewFileWindow"
        Height="300" Width="400"
        WindowStartupLocation="CenterOwner" 
        ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <Button Content="Select File Location" Padding="3,0,3,0" Margin="10" Command="{Binding ChooseDirectory}" HorizontalAlignment="Left"></Button>

            <TextBlock Text="{Binding ChosenDirectory}"  Margin="10,0,10,10"></TextBlock>

        </StackPanel>
        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Content="_OK" Margin="10" MinWidth="60"></Button>
            <Button Content="_Cancel" IsCancel="True" Margin="10" MinWidth="60"></Button>
        </StackPanel>
    </Grid>
</Window>
