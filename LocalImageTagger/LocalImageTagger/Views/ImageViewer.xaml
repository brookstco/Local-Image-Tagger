    <!--
        <Button Content="Open Image" ToolTip="Open an image"  HorizontalAlignment="Stretch" Margin="0,0,0,0" Grid.Row="1" VerticalAlignment="Center" Click="File_Open_Click"/>

    </Grid>-->
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <DockPanel>
            <StackPanel DockPanel.Dock="Left" Visibility="{Binding SidebarVisibility}">
                <TextBlock>Tag</TextBlock>
                <TextBlock>Tag</TextBlock>
                <TextBlock>Tag</TextBlock>
                <TextBlock>Tag</TextBlock>
                <TextBlock>Tag</TextBlock>
                <TextBlock>Tag</TextBlock>
                <!--<Button Content="_Open Image" ToolTip="Open an image" Click="File_Open_Click"/>-->
                <Button Content="{Binding ButtonRenderContent}" ToolTip="{Binding ButtonRenderToolTip}" Command="{Binding SwapRenderingMode}" Width="90"/>
            </StackPanel>
            <!--<ContentControl Content="{Binding SelectedDisplayType}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>-->
        </DockPanel>

        <Button Command="{Binding OpenCloseSidebar}"  HorizontalAlignment="Right" VerticalAlignment="Top" Background="Transparent" BorderBrush="{x:Null}">
            <Image Source="/Images/arrow.png" Stretch="None" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <ScaleTransform ScaleX="{Binding ButtonSidebarDirection}"/>
                </Image.RenderTransform>
            </Image>
        </Button>
        
        <local:ZoomBorder ClipToBounds="True"
                        VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                        Grid.Column="2">
            <Image Source="{Binding Image}" Stretch="Uniform" HorizontalAlignment="Left" VerticalAlignment="Top" RenderOptions.BitmapScalingMode="{Binding RenderingBitmapScalingMode}"/>
        </local:ZoomBorder>
    </Grid>

</Window>
